{{#each model.errors.name as |error|}}
  {{error.message}}
{{/each}}

<form class="form-horizontal">  
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Name</label>
    <div class="col-md-5">
      {{input value=model.name class="form-control"}}
    </div>
  </div>
  <div class="form-group">
      <label for="description" class=" col-md-2 control-label">Age</label>
      <div class="col-md-5">
        {{input type="number" value=model.age class='form-control'}}
      </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <button {{action "createTeacher"}} class="btn btn-sm btn-primary">Save</button>
   </div>
 </div>
</form> 